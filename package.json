{
  "name": "products-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/src/index.js\"",
    "persistence:up": "docker-compose up",
    "persistence:down": "docker-compose down",
    "migrate:dev": "npx prisma migrate dev && prisma generate",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "npm run migrate:dev && jest --runInBand --testPathPattern=test/integration",
    "test:stress": "./test/stress/run.sh",
    "docker:build": "docker build -t github.com/lucasvmiguel/products-api:latest .",
    "docker:run": "docker run --rm -p 3000:3000 github.com/lucasvmiguel/products-api:latest"
  },
  "_moduleAliases": {
    "@": "dist/src"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "concurrently": "^8.2.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prisma": "^4.15.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
